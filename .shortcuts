##Listing of my shell macros
##Add to .bash_profile or .bashrc with:
##[[ -s ~/.my_shortcuts/.shortcuts ]]  && source ~/.my_shortcuts/.shortcuts

#unix tools
alias ll='ls -lh'
alias ls='ls -G'
alias mkdir='mkdir -p'
alias ping='ping -c 3'
alias wget='wget -c'

function mktouch {
  mkdir -p $(dirname $1) && touch $1
}

#brew
export HOMEBREW_GITHUB_API_TOKEN=putThisInBashProfileNoQuotes
export HOMEBREW_CASK_OPTS='--appdir=/Applications'

alias brew_improve='brew update && brew upgrade && brew cleanup'

function brew_cask_upgrade {
	brew update;
	for i in $( brew cask list ); do
        brew cask install $i
    done
}

#git
function git_closeout {
  git checkout $2 && \
  git pull es $2 && \
  git branch -d "$1" && \
  git push origin :"$1";
}

function git_dammit {
  git checkout . ;
}

function git_dir {
  mktouch "$1/.gitkeep"
}

function git_rebase_upstream {
  git checkout $2 && \
  git pull $1 $2 &&  \
  git push origin $2 && \
  git checkout $3 && \
  git merge $2 && \
  git rebase -i $2; \
}

#terminal functions
function tab_name {
  printf "\e]1;$1\a"
}

#terminal Colors, shamelessly stolen from 
#https://github.com/jacaetevha/finna-be-octo-hipster
#and tweaked to be ugly ;)

function tab_red()    { tab_color 200 32  32; }
function tab_orange() { tab_color 220 140 32; }
function tab_green()  { tab_color 32  200 32; }
function tab_light_blue()   { tab_color 32 64 200; }
function tab_blue()   { tab_color 32  64 200; }
function tab_purple()  { tab_color 160 32 160; }
function tab_yellow() { tab_color 200 200 32; }
function tab_white()  { tab_color 255 255 255; }

function tab_color() {
  echo -n -e "\033]6;1;bg;red;brightness;$1\a"
  echo -n -e "\033]6;1;bg;green;brightness;$2\a"
  echo -n -e "\033]6;1;bg;blue;brightness;$3\a"
}
